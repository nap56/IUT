algo exo4TD2

var
	entier n, tmp1, tmp2, C;
	
principal
debut
	C := 0;
	
	tantque (n <> 0);
		
		saisir("Entrez une valeur:", @tmp1);
		saisir("Enrez une valeur:", @tmp2);
		
			si (tmp1 := tmp2) alors
				C := C+1;
			finsi
			
			si (tmp1 := ((-1) * tmp2)) alors
				C := C+1;
			finsi
			
	fintantque
	
	afficher("Il y a " + C);
	afficher(" entiers successifs symetriques par rapport a 0.");

fi